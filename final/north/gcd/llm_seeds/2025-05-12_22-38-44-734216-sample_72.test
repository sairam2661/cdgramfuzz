set testdir [file dirname $argv0]
source $testdir/tester.tcl
set testprefix sqlite3_fuzz

proc fuzz_proc {} {
  global fuzzargs
  lappend fuzzargs
  expr {$fuzzargs}
}

do_test fuzz-1.1 {
  sqlite3 db a
  execsql {SELECT * FROM sqlite_master}
} {}

do_execsql_test fuzz-1.2 {
  CREATE TABLE b(y);
  INSERT INTO b VALUES('a');
  SELECT count(*) FROM b;
} {1}

ifcapable journalMode {
  catchsql {PRAGMA journal_mode="WAL"}
} {0 {}}

set testprefix sqlite3_fuzz_2
set n 10000
db eval {
  CREATE TABLE c AS SELECT randomblob$n FROM randomdata ORDER BY randomblob$n
}

do_execsql_test fuzz-2.1 {
  INSERT INTO c VALUES(8);
  SELECT * FROM c;
} {1}

set n 5000
db eval {
  CREATE TABLE d AS SELECT randomblob$n FROM randomdata ORDER BY randomblob$n
}

do_execsql_test fuzz-2.2 {
  INSERT INTO d VALUES(0);
  SELECT * FROM d;
} {1}

finish_test