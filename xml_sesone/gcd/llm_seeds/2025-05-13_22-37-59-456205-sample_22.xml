<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE book [
  <!ELEMENT book (catalog, dedication)>
  <!ATTLIST book
    author CDATA #IMPLIED
    language (german|english) "a"
  >
  <!ENTITY bookinfo "D">
  <!ENTITY % attratt "%">
  <!NOTATION bookformat SYSTEM "m">
  %attratt;
