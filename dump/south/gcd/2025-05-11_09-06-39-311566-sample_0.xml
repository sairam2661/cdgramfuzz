<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "http://example.com/example.dtd" [
  <!ENTITY % temp "<!ENTITY foo %temp;>">
  <!ENTITY foo "&foo; &bar;">
  <!ENTITY bar "FOO Bar">
]>
<document>
  <html xmlns="http://www.w3.org/1999/xhtml"
        xmlns:xdelta="http://xml.apache.org/xslt/ xdDeltaTransform"
        xml:space="preserve">
    <head>
      <title>Multi lingual Document</title>
      <meta name="author" content="John Doe" />
      <style><![CDATA[
        @import url(/test.css);
      ]]></style>
    </head>
  <body>
    <p>This is a multi lingual document &foo; &foo;</p>
    <p style="display:block" xml:lang="fr">Ceci est un document multilingue.</p>
  </body>
  </html>
  <metadata>
    <version>2.0</version>
  </metadata>
</document>