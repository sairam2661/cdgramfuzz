<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document [
  <!ELEMENT document (#PCDATA)*> <!-- Declare the root element as empty -->
  <!ELEMENT html EMPTY> <!-- Define an empty html element -->
]>
<document xmlns="http://example.com/document" xml:lang="en-US">
  <html xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="document.xsd">
    <head>
      <title>Complex XML Document</title>
      <meta name="description" content="This is a long &amp; complex XML document." />
      <style type="text/css"><![CDATA[
        @charset "ISO-8859-1";
        html, body { font-family: Arial; }
        h1 { color: #FF0000; font-size: 2em; }
      ]]></style>
    </head>
  <body xmlns="http://www.w3.org/1999/xhtml">
    <p>Hello World!</p>
  </body>
  </html>
  <metadata>
    <author>John Doe</author>
    <date>2024-03-15T14:30:00Z</date>
    <external>
      <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
                 xmlns:ns="http://example.com/document"
                 targetNamespace="http://example.com/document">
        <xs:element name="document" type="xs:string"/>
      </xs:schema>
    </external>
  </metadata>
  <section>
    <paragraph>This is a paragraph with a &amp; special character.</paragraph>
  </section>
  <comment><![CDATA[
    Multiple lines
    of comments
    are allowed here
  ]]></comment>
</document>