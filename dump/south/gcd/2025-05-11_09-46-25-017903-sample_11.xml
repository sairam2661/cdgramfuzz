<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document [
  <!ENTITY percent "&#37;">
  <!ELEMENT document (html+, metadata+, section*)>
  <!ELEMENT html (#PCDATA | meta | style | title)*>
  <!ATTLIST html
    xmlns CDATA #REQUIRED
    xmlns:xml CDATA #REQUIRED
  >
  <!ELEMENT metadata (#PCDATA | author | date)*>
  <!ATTLIST metadata
    id CDATA #REQUIRED
  >
]>
<document>
  <html xmlns="http://www.w3.org/1999/xhtml" xmlns:xml="http://www.w3.org/XML/1998/namespace" xml:lang="en">
    <head>
      <title>Bananas</title>
      <meta name="description" content="A blog on bananas %note;."/>
      <style contentType="text/css" xml:space="preserve"><![CDATA[
        body { font-family: Georgia, serif; }
        h1 { color: #FFFF00; }
      ]]></style>
    </head>
  <bodysize=  "1em"> <!-- non standard attribute -->
  </body> </html>
  <metadata id="meta1"><author xmlns="http://example.com/schema">John Doe</author><date>2024-05-10</date></metadata>
  <metadata id="meta2"><author>Jane Doe</author><date>2025-05-10</date></metadata>
  <section>
    <h1>paragraphs separated by <percent>&amp;</percent> are acceptable.</h1>
    <paragraph>Bananas are very nutritious. &note;.</paragraph>
  </section>
</document>