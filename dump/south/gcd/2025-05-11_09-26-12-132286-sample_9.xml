<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ENTITY amp "&amp;">
  <!ELEMENT document (html|metadata|section)>
  <!ELEMENT html (#PCDATA|head|meta|style)*>
  <!ELEMENT head (title,meta*,style?)>
  <!ATTLIST html
    xmlns CDATA #REQUIRED
    xmlns:xml CDATA #IMPLIED
    xml:lang CDATA #IMPLIED
  >
  <!ELEMENT meta EMPTY>
  <!ELEMENT style EMPTY>
  <!ELEMENT metadata (author,date)>
  <!ATTLIST metadata
    xmlns CDATA #IMPLIED
  >
  <!ELEMENT author (#PCDATA|text|note)*>
  <!ELEMENT date (#PCDATA|number|year)*
  >
  <!ELEMENT section (#PCDATA|paragraph|section)*>
  <!ELEMENT paragraph (#PCDATA|note)*>
]>
<document>
    <html xmlns="http://www.w3.org/1999/xhtml" xmlns:xml="http://www.w3.org/XML/1998/namespace" xml:lang="en-US">
        <head>
          <title>Hello, world!</title>
          <meta name="author" content="John Doe"/>
          <style> <![CDATA[
            body { font-family: Courier; }
            h1 { color: red; }
          ]]></style>
        </head>
    <body>
      <metadata xml:space="preserve">
        <author>
          &note;
            &amp;
              John Doe
        </author>
        <date>&num;</date>
      </metadata>
        <section>
            <paragraph>This is some text.</paragraph>
        </section>
    </body>
    </html>
</document>