<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "document.dtd" [
  <!ENTITY quote "\">
  <!ENTITY num "123">
  <!ENTITY pi "3.14">
  <!ENTITY ns "http://example.org/">
  <!NOTATION pdf SYSTEM "Adobe PDF Document">
]>
<document>
  <html xmlns="http://www.w3.org/1999/xhtml"
        xmlns:ex="http://example.org/xhtml"
        xmlns:xml="http://www.w3.org/XML/1998/namespace"
        xml:lang="en-GB">
    <head>
      <title lang="fr">Les Meilleures Fruits</title>
      <meta name="&ex:keywords;" content="best fruits, delicious taste" />
    </head>
    <body>
      <blockquote cite="http://www.example.org">
        <p>This is the best fruit.</p>
        <p xml:lang="fr">C'est le fruit le mieux!</p>
        <p rendition="italic">You can copy the following text, but don't forget to cite the original source: <ci>"&quote;</ci></p>
      </blockquote>
      <h2><a href="#id1">Step 1</a></h2>
      <h2><a id="id1" href="#id2">Step 2</a></h2>
    </body>
  </html>
  <document-properties>
    <property name="title">An example XML document</property>
    <property name="author">John Smith</property>
    <property name="rev">3</property>
  </document-properties>
  <namespace-list>
    <prefix>ex</prefix>
    <uri>&ns;</uri>
  </namespace-list>
  <data>
    <byte-stream>
      <data type="application/pdf">&num;</data>
    </byte-stream>
    <data type="application/math">&pi;</data>
  </data>
  <comment>This is an example comment.</comment>
</document>