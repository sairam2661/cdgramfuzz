<?xml version="1.0" encoding="UTF-16"?>
<!DOCTYPE document [
  <!ENTITY fruit "apple">
  <!ELEMENT document (html, metadata, section)>
  <!ELEMENT html (head, body)>
  <!ELEMENT metadata (#PCDATA|author|date)*>
  <!ELEMENT section (#PCDATA|paragraph)*>
  <!ELEMENT head (title, meta, style)>
  <!ELEMENT body (#PCDATA|h1|section)*>
]>
<document>
  <html>
    <head>
      <title>My Fruit Blog</title>
      <meta name="description" content="A blog about fruit." />
      <style>
        <![CDATA[
          :root { font-family: Arial, sans-serif; }
          h2 { display: none; }
        ]]>
      </style>
    </head>
    <body>
      <h1>Fruit Salad</h1>
      <section>
        <paragraph>Hello, &fruit;</paragraph>
      </section>
    </body>
  </html>
  <metadata>Written by: Jane Doe</metadata>
  <section>
    <author>Bob Smith</author>
    <date>2024-02-12</date>
    <section>
      <paragraph>Fruit is delicious.</paragraph>
    </section>
  </section>
</document>