]>
<document xmlns="http://www.example.com/mydocs"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="schema.xsd"
          xml:base="http://example.com">
  <html xmlns:svg="http://www.w3.org/2000/svg">
    <head>
      <title>XML Document</title>
      <style type="text/css">
        <![CDATA[
          @import url(resources.css);
          p { font-size: 2pt; }
        ]]>
      </style>
    </head>
    <body>
      <metadata>
        <author>
          <name><![CDATA[Jane Doe (foo&amp;bar)]]>></name>
        </author>
      </metadata>
    </body>
  </html>
  <content>&para;</content>
  <section>
    <sidebar>
      <note>&note;</note>
    </sidebar>
    <article><p>Blah blah blah</p></article>
  </section>
</document>