<?xml version="1.0" encoding="ISO-8859-9"?>
<!DOCTYPE document [
  <!ELEMENT document (html, metadata, section+)>
  <!ELEMENT html (head|body)>
  <!ELEMENT head (meta, style)*>
  <!ATTLIST html
    xmlns CDATA #REQUIRED
    xmlns:xml CDATA #REQUIRED
    xml:lang CDATA #REQUIRED
  >
  <!ELEMENT metadata (author, date)>
  <!ELEMENT section (paragraph)>
  <!ELEMENT paragraph (#PCDATA|note|html)*>
  <!ELEMENT note (#PCDATA|note)*>
]>
<document>
  <html xml:lang="en" xmlns="http://www.w3.org/1999/xhtml" xmlns:xml="http://www.w3.org/XML/1998/namespace">
    <head>
      <meta name="description" content="A blog on apples." />
      <style><![CDATA[
        body { font-family: Helvetica, sans-serif; }
        a { text-decoration: none; }
      ]]></style>
    </head>
    <body>
      <h1>Apples are the best fruit!</h1>
    </body>
  </html>
  <metadata>
    <author>John Smith</author>
    <date>2024-03-15</date>
  </metadata>
  <section>
    <paragraph>
      Apples are very nutritious. 
      <note>Important note</note>
    </paragraph>
  </section>
</document>