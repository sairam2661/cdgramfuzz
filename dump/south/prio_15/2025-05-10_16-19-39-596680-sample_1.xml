<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document PUBLIC "-//W3C//DTD XHTML 2.0 Transitional//EN"
 "http://www.w3.org/TR/xhtml2/DTD/xhtml2-transitional.dtd"
[<!ENTITY fruit "Apple">%fruit;]>
<document xmlns="http://example.com"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://example.com schema.xsd">
  <html xmlns:user="http://example.com/user">
    <head>
      <title>Example</title>
    </head>
    <body>
      <section>
        <h2>TITLE</h2>
        <p>Paragraph text containing %fruit;.</p>
      </section>
      <section>
        <user:address>
          <user:name>John Doe</user:name>
          <user:street>123 Main St</user:street>
        </user:address>
      </section>
    </body>
  </html>
</document>