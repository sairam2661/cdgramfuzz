<?xml version="1.0" encoding="ISO-8859-15"?>
<!DOCTYPE document SYSTEM "http://example.com/mixed.dtd" [
  <!ENTITY note "This is a note entity.">
  <!ATTLIST note xml:space (preserve|default) "default">
  <!ENTITY % publicID PUBLIC "-//W3C//DTD XHTML 1.0 Mixed//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-mixed.dtd">
  <!ENTITY % systemID "http://example.com/mixed.dtd"
    >
]>
<document xmlns="http://www.example.com/XMLNS"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xml:lang="en-NZ"
          xsi:noNamespaceSchemaLocation="http://example.com/noNamespace.xsd"
          xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
          exclude-result-prefixes="xsl">
  <html xmlns="http://www.w3.org/1999/xhtml"
        xmlns:svg="http://www.w3.org/2000/svg">
    <head>
      <title>A mixture of xml features</title>
    </head>
    <body>
      <note>&note;</note>
      <!-- comment -->
      <svg>
        <circle cx="20" cy="20" r="20"/>
      </svg>
      <text xml:space="preserve">&note;</text>
    </body>
  </html>
  <metadata>
    <author>John Doe</author>
    <date>2020-02-20</date>
  </metadata>
  <section>
    <xsl:stylesheet version="1.0"
                     xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
      <xsl:template match="/">
        <html><body><h2>Processed Content</h2></body></html>
      </xsl:template>
    </xsl:stylesheet>
    <paragraph>XSL:Processing!</paragraph>
  </section>
</document>