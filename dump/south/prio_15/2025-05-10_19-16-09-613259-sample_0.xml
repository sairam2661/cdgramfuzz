<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "custom.dtd">
<document xmlns="urn:example:document"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="custom.xsd">
  <html>
    <head prefix="abc:def">
      <title lang="en">XML is a markup language.</title>
    </head>
    <body id="my-body">
      <p>Hello, <span class="bold">world!</span></p>
      <note>
        <data type="integer">123</data>
        <data type="decimal">45.67</data>
        <choice>
          <item>One</item>
          <item>Two</item>
          <item>Three</item>
        </choice>
      </note>
    </body>
  </html>
  <document-type>blog post</document-type>
</document>