<?xml version="1.0" encoding="ISO-8859-5" standalone="yes"?>
<!DOCTYPE document PUBLIC "-//w3c//DTD XHTML 1.0 Document Type 2//EN"
 "http://example.org/dtd/xhtml1-transitional.dtd" [
  <!ENTITY % entity "Some text inside an entity">
  <!ENTITY % other-entity "#PCDATA">
]>
<document xmlns="http://www.w3.org/1999/xhtml"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://example.org/xmlns/XMLSchema.xsd document.xsd">
  <html lang="sv-SE">
    <head>
      <style type="text/css">
        <![CDATA[
          :root {
            --color: red;
            --color: blue;
            color: var(--color);
          }
        ]]>
      </style>
    </head>
    <body>
      <meta charset="utf-8"/>
      <section xml:lang="fr">
        <h1>Heading</h1>
        <p>&entity;</p>
        <p>&other-entity;</p>
      </section>
    </body>
  </html>
</document>