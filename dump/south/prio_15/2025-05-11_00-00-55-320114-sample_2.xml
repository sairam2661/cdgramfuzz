<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document [
   <!ELEMENT document (html, metadata, section*)>
   <!ELEMENT html (head, body)>
   <!ELEMENT head (title, meta, style)>
   <!ELEMENT html SYSTEM>
   <!ELEMENT metadata (author, date)>
   <!ELEMENT body (#PCDATA | section)*>
   <!ELEMENT meta (#PCDATA | id)*>
   <!ELEMENT style (#PCDATA | href)*>
   <!ATTLIST section
      type CDATA #REQUIRED
      content CDATA #REQUIRED>
   <!ENTITY fruit "Apple">
]>
<document>
  <html>
    <head>
       <title>Fruit Salad</title>
      <meta id="fruit-metadata" name="description" content=""
            href="%2Fstyles&amp;foo=bar" />
      <style id="fruit-style"><![CDATA[
         body { font-family: Tahoma, Segoe UI; }
         h1 { color: #FF0000; }
      ]]></style>
    </head>
    <body>
      <section type="fruit" content="Tasty fresh fruits! &fruit;"/>
    </body>
  </html>
  <metadata>
    <author>Mike Brown</author>
    <date>2030-08-12</date>
  </metadata>
  <section type="sunny" content="Weather conditions! &amp;lifesaver;"/>
</document>