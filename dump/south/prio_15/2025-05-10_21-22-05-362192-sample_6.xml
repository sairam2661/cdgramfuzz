<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "test.dtd" [
  <!ENTITY % entity "Entity">
  <!ELEMENT document (html, metadata, section+)>
]>
<document xml:lang="en" xmlns:custom="http://example.com/custom"
          custom:attribute="true"
          xsi:noNamespaceSchemaLocation="test.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
      <title>Test</title>
      <meta name="author" content="%Entity;"/>
    </head>
    <body>
      <p>This is a paragraph of text <b>with </b><custom:element>custom markup</custom:element>!</p>
    </body>
  </html>
  <metadata>
    <author>John Doe</author>
    <date>2022-01-01</date>
  </metadata>
  <section>
    <paragraph>This is a paragraph of text!</paragraph>
  </section>
  <section>
    <custom:element>More text</custom:element>
  </section>
</document>