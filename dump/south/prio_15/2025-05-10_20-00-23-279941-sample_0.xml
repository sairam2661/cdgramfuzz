<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "colors.dtd" [
  <!ENTITY color1 "Red">
  <!ENTITY color2 "Green">
  <!ENTITY color3 "Blue">
]>
<document>
  <html xmlns:custom="http://example.com/custom" xml:lang="en-US">
    <head>
      <title>Colors</title>
      <meta name="description" content="A list of colors." />
      <style><![CDATA[
        body { font-family: Verdana, sans-serif; }
       .color { background-color: red; }
      ]]></style>
    </head>
    <body>
      <h1>Colors</h1>
      <custom:entry>
        <color>&color1;</color>
      </custom:entry>
      <custom:entry>
        <color>&color2;</color>
        <category>Green Colors</category>
      </custom:entry>
      <custom:entry>
        <color>&color3;</color>
        <category>Blue Colors</category>
        <subcategory>Blue-Violet</subcategory>
        <custom:attribute name="hue">270</custom:attribute>
      </custom:entry>
    </body>
  </html>
  <metadata>
    <author>John</author>
    <date>2025-05-10</date>
  </metadata>
</document>