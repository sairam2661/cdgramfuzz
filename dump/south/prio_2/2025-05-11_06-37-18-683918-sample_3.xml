<?xml version="1.0" encoding="ISO-8859-1" standalone="no"?>
<!DOCTYPE document [
  <!ENTITY desc "a short description">
  <!ELEMENT document (html, metadata, section*)>
  <!ELEMENT html (head, body)>
  <!ELEMENT head (title, meta+, style)>
  <!ELEMENT title (#PCDATA|CDATA)*>
  <!ELEMENT meta (#PCDATA|attribute)*> <!-- attribute > #PCDATA | CDATA -->
  <!ELEMENT style (#PCDATA | CDATA)*>
  <!ELEMENT metadata (author, date)>
  <!ELEMENT author (#PCDATA | entity )*>
  <!ELEMENT date (#PCDATA | attribute )*>
  <!ELEMENT section (paragraph+ | list*)>
  <!ELEMENT paragraph (#PCDATA | entity )*>
  <!ELEMENT list (#PCDATA | item )*>
  <!ELEMENT item (#PCDATA | attribute )*>
  <!ELEMENT note ANY>
]>
<document>
  <html xmlns="http://www.w3.org/1999/xhtml"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="fruits.xsd"
        xml:lang="en-US"
        xml:space="preserve">
    <head>
      <title>Bananas are the best fruit!</title>
      <meta name="author" content="Jane Doe" />
      <meta name="date" content="2025-05-10" />
      <style><![CDATA[ 
        body { font-family: Georgia, serif; }
        h1 { color: #FFFF00; }
        paragraph { text-align:center; }
      ]]></style>
    </head>
    <body>
      <h1>Bananas are the best fruit!</h1>
    </body>
  </html>
  <metadata>
    <author>Jane Doe &amp; John Doe</author>
    <date>2025-05-10</date>
  </metadata>
  <section>
    <paragraph>Bananas are very nutritious. &note;</paragraph>
    <paragraph>&desc;</paragraph>
    <list>
      <item>Apples</item>
      <item>Oranges</item>
    </list>
  </section>
  <section xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xs:noNamespaceSchemaLocation="fruits.xsd">
    <paragraph>Foo bar baz</paragraph>
  </section>
  <note>Foo</note>
</document>