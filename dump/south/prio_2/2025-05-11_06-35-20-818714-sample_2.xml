<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE document [
  <!ELEMENT document (html, metadata+, section+)>
  <!ELEMENT html (#PCDATA | meta | link | style | noscript | script | title | base | br | p | img | hr | table | tr | td | th | col | area)*> 
  <!ELEMENT metadata (author, date)>
