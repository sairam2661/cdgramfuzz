<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ENTITY amp "&amp;" >
  <!ENTITY num "123">
]>
<document xmlns="http://example.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="nonamespace.xsd">
  <html>
    <head>
      <title>Text with reference to entity: {num} and other text</title>
    </head>
    <body>
      <article>
        <section>
          <h2 xml:space="preserve">Two words: Hello, &amp; world!</h2>
          <p>
            This is a paragraph with escaped markup: &lt;
          </p>
        </section>
      </article>
    </body>
  </html>
  <xml:lang>fr</xml:lang>
  <data>2022-03-10</data>
</document>