<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ENTITY fruits "<list><item>Apples</item><item>Bananas</item></list>">
  <!ELEMENT document (header, html, metadata, section+)>
  <!ATTLIST document
   id CDATA #REQUIRED
   lang CDATA #IMPLIED
   xmlns CDATA #FIXED 'http://www.w3.org/1999/xhtml'>
  <!ELEMENT header (title, meta*, style)>
  <!ATTLIST header
   xml:lang CDATA #IMPLIED
  >
  <!ELEMENT html (head, body)>
  <!ELEMENT head (meta+, style, title)>
  <!ELEMENT meta (#PCDATA)*> 
  <!ELEMENT style (#PCDATA)*> 
  <!ELEMENT title (#PCDATA)*> 
  <!ELEMENT body (#PCDATA)*> 
  <!ELEMENT metadata (author, date)>
  <!ELEMENT author (#PCDATA)*> 
  <!ELEMENT date (#PCDATA)*> 
  <!ELEMENT section (paragraph)>
  <!ELEMENT paragraph (#PCDATA)*> 
  <!ELEMENT list (#PCDATA)*> 
  <!ELEMENT item (#PCDATA)*> 
]>
<document id="doc1" xml:lang="en-US" xmlns="http://www.w3.org/1999/xhtml">
  <html>
    <head>
      <meta name="description" content="A blog about fruits." />
      <meta name="keywords" content="fruits,banana,apple" />
      <style><![CDATA[
        body { font-family: Georgia, serif; }
        h1 { color: #FFFF00; }
      ]]></style>
    </head>
    <body>
      <header xml:lang="en-US">
        <title>Fruits</title>
      </header>
    </body>
  </html>
  <metadata>
    <author>Jane Doe</author>
    <date>2025-05-10</date>
  </metadata>
  <section>
    &fruits;
    <paragraph>Bananas are very nutritious.</paragraph>
  </section>
  <section>
    <paragraph>Testing CDATA sections.</paragraph>
    <paragraph><![CDATA[This should be treated as a single paragraph with a CDATA section]]></paragraph>
  </section>
</document>