<?xml version="1.0" encoding="UTF-16"?>
<!DOCTYPE document [
  <!ELEMENT document (html, metadata, section*)>
  <!ELEMENT html (#PCDATA)*> 
  <!ATTLIST html xmlns CDATA #REQUIRED>
  <!ELEMENT metadata (author, date)>
  <!ELEMENT author (#PCDATA)*> 
  <!ATTLIST author name CDATA #REQUIRED>
  <!ELEMENT date (#PCDATA)*> 
  <!ATTLIST date year CDATA #REQUIRED>
  <!ELEMENT section (paragraph+)>
  <!ELEMENT paragraph (#PCDATA | note | emph | sub)* 
    >
  <!ELEMENT note EMPTY>
  <!ATTLIST note title CDATA #REQUIRED>
  <!ELEMENT emph (#PCDATA)*> 
  <!ELEMENT sub (#PCDATA)*> 
  <!ENTITY note "Note">
]>
<document>
  <html xmlns="http://example.com/xhtml">
    <head>
      <title>Bananas are the best fruit!</title>
    </head>
    <body>
      <meta name="description" content="A blog on bananas." />
      <style type="text/css">
        body { font-family: Georgia, serif; }
        h1 { color: #FFFF00; }
      </style>
      <p>Bananas are very nutritious.</p>
      <note title="Note">This is a note.</note>
      <emph>Bananas are very tasty!</emph>
      <sub>One a day.</sub>
      <p>Bananas are good source of potassium.</p>
      <section>
        <paragraph>Bananas are rich in vitamins.</paragraph>
      </section>
    </body>
  </html>
  <metadata>
    <author name="John Doe">
      <date year="2025">May 10</date>
    </author>
  </metadata>
  <section>
    <paragraph>Bananas are very nutritious.</paragraph>
  </section>
</document>