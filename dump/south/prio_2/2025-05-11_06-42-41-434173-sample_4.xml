<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE document SYSTEM "fruits.dtd" [
  <!ENTITY note "Note">
  <!ELEMENT fruits (fruit+)>
  <!ATTLIST fruits
    xmlns CDATA #REQUIRED
    xmlns:xlink CDATA #IMPLIED
    xmlns:xsi CDATA #IMPLIED
    xsi:noNamespaceSchemaLocation CDATA #IMPLIED
    xml:lang CDATA 'en'
  >
  <!ELEMENT fruit (#PCDATA | name | author | date | section | paragraph | meta | link | image | style)*>
  <!ATTLIST fruit
    id ID #IMPLIED
    type CDATA #IMPLIED
  >
  <!ELEMENT name (#PCDATA | meta | link | image)*>
  <!ATTLIST name
    content CDATA #IMPLIED
  >
  <!ELEMENT author (#PCDATA)*>
  <!ELEMENT date (#PCDATA)*>
  <!ELEMENT section (#PCDATA | paragraph | meta | link | image)*>
  <!ATTLIST section
    id ID #IMPLIED
    title CDATA #IMPLIED
  >
  <!ELEMENT paragraph (#PCDATA | note)*>
  <!ELEMENT meta (#PCDATA)*>
  <!ELEMENT link (#PCDATA)*>
  <!ELEMENT image (#PCDATA)*>
  <!ELEMENT style (#PCDATA)*>
]>
<document>
  <html xmlns="http://www.w3.org/1999/xhtml" xmlns:xml="http://www.w3.org/XML/1998/namespace" xml:lang="en-US" class="container">
    <head>
      <title>Fruits</title>
      <meta name="description" content="A blog on various fruits." />
      <style><![CDATA[
        body { font-family: Georgia, serif; }
        h1 { color: #FFFF00; }
       .container { width: 80%; margin: 0 auto; }
      ]]></style>
    </head>
    <body>
      <fruits id="fruits" type="exotic" xml:lang="en">
        <fruit>
          <name>Dragon Fruit</name>
          <author>Jane Doe</author>
          <date>2025-05-10</date>
          <section id="dragon-fruit" title="About Dragon Fruit">
            <image src="dragon-fruit.jpg" />
            <paragraph>About dragon fruit.</paragraph>
          </section>
        </fruit>
      </fruits>
    </body>
  </html>
  <metadata>
    <author>Jane Doe</author>
    <date>2025-05-10</date>
  </metadata>
  <section id="about-me" title="About Me">
    <paragraph>This is a test paragraph.</paragraph>
  </section>
</document>