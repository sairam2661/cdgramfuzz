<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE document [
  <!ELEMENT document (html, metadata, section+)>
  <!ELEMENT html (#PCDATA)*> 
  <!ATTLIST html lang CDATA #REQUIRED>
  <!ELEMENT metadata (#PCDATA)*> 
  <!ATTLIST metadata id CDATA #IMPLIED>
  <!ELEMENT section (#PCDATA)*> 
  <!ATTLIST section id CDATA #REQUIRED>
]>
<document><html lang="fr"><head></head><body></body></html>
  <metadata id="foo"/>
  <section id="bar">Some text.</section>
  <section id="baz">Some more text!</section>
  <section id="abc"></section>
</document>