<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ELEMENT document (#PCDATA|html|metadata|section|comment)*>
  <!ELEMENT html (#PCDATA|meta|link|style|comment)*>
  <!ELEMENT meta (#PCDATA|style)*>
  <!ELEMENT section (#PCDATA|paragraph|section|listing|comment)*>
  <!ELEMENT listing (#PCDATA|variable)*>
  <!ELEMENT variable (#PCDATA)*>
  <!ENTITY note "Note">
]>
<document xml:lang="en" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="document.xsd">
  <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
      <meta name="date" content="2024-07-26"/>
      <meta name="author" content="John Smith"/>
    </head>
    <body>
      <style xml:space="preserve">/* global styles */</style>
      <section>
        <listing>
          <variable xml:lang="fr">Variable</variable>
          <variable xml:lang="es">Variable</variable>
        </listing>
      </section>
      <section>
        <paragraph>Paragraph with &note; entity.</paragraph>
      </section>
    </body>
  </html>
  <metadata>
    <author>John Smith</author>
    <date>2024-07-26</date>
  </metadata>
  <comment>This is a comment.</comment>
</document>