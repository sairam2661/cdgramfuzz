<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "http://www.example.com/document.dtd" [
  <!ENTITY fruit "Apple">
  <!ENTITY ref SYSTEM "file://example.xml">
  <!ENTITY note "Note">
]>
<document xmlns:custom="http://example.com/custom"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://www.example.com/schema.xsd"
          custom:customAttribute="value">
  <html>
    <head>
      <title>XML Fuzz Test Document</title>
      <meta name="creator" content="John Doe"/>
    </head>
    <body>
      <section>
        <custom:section custom:subAttribute="subValue">
          <p>&fruit;</p>
          <p>&ref;</p>
          <p>&note;</p>
        </custom:section>
      </section>
    </body>
  </html>
</document>