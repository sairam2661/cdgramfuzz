<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "http://example.com/schemas/myschema.dtd">
<document xml:lang="es-ES" 
          xmlns="http://www.w3.org/1999/xhtml" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://example.com/schemas/myschema.xsd">
  <html>
    <head>
      <title>Document title</title>
    </head>
    <body>
      <section>
        <p>This element contains other mixed content: <b>bold text</b> and <i>italics</i>!</p>
      </section>
      <list xmlns:foo="http://example.com/foo">
        <item>Item 1 <foo:attribute>foo value</foo:attribute></item>
        <item>Item 2</item>
      </list>
    </body>
  </html>
  <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
             targetNamespace="http://example.com/schemas/myschema.xsd"
             elementFormDefault="qualified"
             version="1.0">
    <xs:element name="document">
      <xs:complexType mixed="true">
        <xs:choice minOccurs="0" maxOccurs="unbounded">
          <xs:element ref="section"/>
          <xs:element ref="list"/>
        </xs:choice>
      </xs:complexType>
    </xs:element>
    <xs:element name="section">
      <xs:complexType mixed="true"/>
    </xs:element>
    <xs:element name="list">
      <xs:complexType mixed="true">
        <xs:sequence>
          <xs:element maxOccurs="unbounded" ref="item"/>
        </xs:sequence>
      </xs:complexType>
    </xs:element>
    <xs:element name="item" type="xs:string"/>
  </xs:schema>
</document>