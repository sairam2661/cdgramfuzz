<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document[
  <!ELEMENT document (html, metadata, section+)>
  <!ELEMENT html (#PCDATA | title | meta | style)*>
  <!ELEMENT metadata (author, date)>
  <!ELEMENT section (paragraph+)>
  <!ELEMENT paragraph (#PCDATA | note)*>
]>
<document>
  <html>
    <head>
      <title>XML Example</title>
    </head>
    <body>
      <p>Example paragraph</p>
    </body>
  </html>
  <metadata>
    <author xml:lang="en">John Doe</author>
    <date>1999-03-31</date>
  </metadata>
  <section>
    <paragraph>Test paragraph &amp;note;</paragraph>
    <paragraph>Another test paragraph</paragraph>
  </section>
</document>