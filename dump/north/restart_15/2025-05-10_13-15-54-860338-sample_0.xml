<?xml version="1.0" encoding="ISO-8859-1"?><!DOCTYPE document SYSTEM "http://example.com/XMLSchema.dtd" [
  <!ENTITY % fruit "Apple | Banana | Mango">
  <!ATTLIST note
    id ID #REQUIRED
    class CDATA #IMPLIED>
  <!ENTITY text "Some sample text &#x272; here &#13;&#10;">
]><document xmlns="http://example.org/XMLnamespace" xml:lang="en-GB" xml:space="preserve" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <html>
    <head>
      <title>Sample Document</title>
    </head>
    <body>
      <h1>Hello, &fruit;!</h1>
      <p>&text;</p>
      <xsl:stylesheet version="1.0"
        xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
        xmlns:xs="http://www.w3.org/2001/XMLSchema">
        <xsl:template match="/">
          <html>
            <body>
              <h1>Hello, world!</h1>
            </body>
          </html>
        </xsl:template>
      </xsl:stylesheet>
      <note id="n1" class="important">This is a note.</note>
    </body>
  </html>
</document>