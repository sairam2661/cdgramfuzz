<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document [
  <!ELEMENT document (html, metadata, section+)>
  <!ELEMENT html EMPTY>
  <!ELEMENT metadata (#PCDATA|author|date)*>
  <!ELEMENT section (paragraph+|html+)>
  <!ELEMENT paragraph (#PCDATA | note)*>
  <!ENTITY note "Note">
]>
<document>
  <html>
    <head>
      <title>Mangoes are a type of stone fruit</title>
      <meta name="keywords" content="fruits, vegetables, foods" />
    </head>
  <body>
    Hello <span xml:lang="fr">Bonjour</span> and welcome!
  </body>
  </html>
  <metadata>
    <author>Someone Not Jane Doe</author>
    <date>2001-01-01</date>
  </metadata>
  <section>
    <paragraph>&note;</paragraph>
    <paragraph>This &note; is a paragraph</paragraph>
  </section>
</document>