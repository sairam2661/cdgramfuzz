<?xml version='1.0'?><!DOCTYPE document [
  <!ENTITY % ent SYSTEM "entities.ent">
  %ent;
  <!ENTITY note "Note">
]>
<document xml:lang='en' xmlns:math='http://www.w3.org/1998/Math/MathML'
          xmime:contentType='application/xml'>
  <html>
    <head>
      <title>A Very Long Title That Will Span Multiple Lines, Because XML Isn't Just for Data.</title>
    </head>
    <body>
      <section>
        <math:math>
          <math:apply>
            <math:plus>
              <math:mrow><math:mo>1</math:mo></math:mrow>
              <math:mrow><math:mo>2</math:mo></math:mrow>
              <math:mrow><math:mo>3</math:mo></math:mrow>
            </math:plus>
          </math:apply>
        </math:math>
      </section>
      <metadata>
        <author>Julia Doe</author>
        <date>2023-01-01</date>
      </metadata>
      <section>
        <paragraph>&note;</paragraph>
      </section>
    </body>
  </html>
</document>