<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document [
  <!ENTITY fruit "apple">
  <!ENTITY note "This is a note.">
  <!ENTITY ents "<!ENTITY fruit 'pineapple'>&fruit;">
]>
<document xmlns:my="http://example.com/my-namespace"
          xml:space="preserve"
          xml:lang="fr"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="document.xsd">
  <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
      <style type="text/css"><![CDATA[
        @namespace my "http://example.com/my-namespace";
        my:paragraph { font-weight: bold; }
      ]]></style>
      <title>Document with entitization</title>
    </head>
    <body>
      <my:para>&fruit;</my:para>
      <p>&note;</p>
    </body>
  </html>
  <declaration>&ents;</declaration>
  <section>
    <subsection>
      <paragraph>Some text.</paragraph>
    </subsection>
  </section>
</document>