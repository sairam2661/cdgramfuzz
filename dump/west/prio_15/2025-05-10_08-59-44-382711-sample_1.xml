<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>
<!DOCTYPE document [
  <!ENTITY entity "Entity Test">
  <!ENTITY % generalEntity "<!ENTITY externalEntity SYSTEM 'data.xml' >">
  %generalEntity;
  <!ELEMENT document (#PCDATA | info | content | meta)*>
]>
<document>
  <html xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <head>
      <title>Test</title>
    </head>
    <body>
      <xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
                 elementFormDefault="qualified">
        <xs:element name="info">
          <xs:complexType>
            <xs:attribute name="title" type="xs:string" use="required"/>
            <xs:attribute name="author" type="xs:string"/>
          </xs:complexType>
        </xs:element>
        <xs:element name="content" type="xs:string"/>
        <xs:element name="meta">
          <xs:complexType>
            <xs:sequence>
              <xs:element name="creator" type="xs:string"/>
            </xs:sequence>
            <xs:attribute name="type" type="xs:string" use="required"/>
          </xs:complexType>
        </xs:element>
      </xs:schema>
      &entity;<meta type="created">2000-01-01</meta>
      <info title="Test Document" author="John Doe"/><content>Text content.</content>
    </body>
  </html>
  <info title="Document Info" author="Jane Doe"/>
  <content>More text content.</content>
</document>