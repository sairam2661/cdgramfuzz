<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document[
  <!ENTITY % p "">
  <!ENTITY % d "">
  <!ENTITY % p "<!ENTITY % d '%%d;'>">
]>
<document xmlns:xml="http://www.w3.org/XML/1998/namespace"
           xml:space="preserve"
           version="1.0"
           xsi:schemaLocation="http://example.com/schema.xsd">
  <html>
    <head>
      <title>Complex XML Document</title>
    </head>
    <body>
      <p>Some &p; content.</p>
      <div>
        <span>&d;</span>
      </div>
      <xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">
        <xsl:template match="/">
          <xsl:apply-templates select="document"/>
        </xsl:template>
        <xsl:template match="document">
          <xsl:text>Document content.</xsl:text>
        </xsl:template>
      </xsl:stylesheet>
    </body>
  </html>
</document>