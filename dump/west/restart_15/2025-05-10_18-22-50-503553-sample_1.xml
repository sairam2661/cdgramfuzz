<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE document [
  <!ELEMENT document (html, section, metadata*)>
  <!ATTLIST document xmlns CDATA #REQUIRED>
  <!ELEMENT html (head, body+)>
  <!ELEMENT head (title, meta+)>
  <!ATTLIST meta name CDATA #REQUIRED>
  <!ATTLIST meta content CDATA #REQUIRED>
  <!ELEMENT body (#PCDATA | p | h1)*>
  <!ENTITY banana "Banana&bananas;">
  <!ELEMENT section (paragraph+)>
  <!ELEMENT metadata (author, date)>
  <!ELEMENT paragraph (#PCDATA)*>
]>
<document xmlns="http://example.com/XMLSchema">
  <html>
    <head>
      <meta name="title" content="My XML Fuzz Test" />
    </head>
    <body>
      <p>Hello World!</p>
      <p>&banana;</p>
    </body>
  </html>
  <section>
    <paragraph>This is a fuzz test.</paragraph>
  </section>
  <metadata>
    <author>John Smith</author>
    <date>2022-02-01</date>
  </metadata>
</document>