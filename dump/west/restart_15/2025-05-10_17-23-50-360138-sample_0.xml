<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!DOCTYPE document PUBLIC "-//W3C//DTD XHTML 1.1 plus MathML 2.0 plus SVG 1.1//EN"
         "http://www.w3.org/2002/04/xhtml-math-svg/xhtml-math-svg.dtd">
<document>
  <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
      <title>Math Formula Demonstration</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <style>
        <![CDATA[
          @namespace mat "http://www.w3.org/1998/Math/MathML";
          body { font-family: Georgia, serif; }
          h1 { color: #FFFF00; }
          mat:math { color: #FF0000; }
        ]]>
      </style>
    </head>
    <body>
      <section xmlns:c="http://www.example.com/CSS">
        <c:section title="Math Example">
          <h1>Mathematical Expression</h1>
          <math xmlns="http://www.w3.org/1998/Math/MathML">
            <mfrac>
              <mrow>
                <mi>a</mi>
                <mo>=</mo>
                <mi>b</mi>
              </mrow>
              <mrow>
                <mi>c</mi>
                <mo>=</mo>
                <mi>d</mi>
              </mrow>
            </mfrac>
          </math>
          <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100">
            <rect x="20" y="20" width="30" height="30" fill="#FF0000" />
            <text x="50" y="50" font-size="24" fill="#FFFFFF">Rectangle</text>
          </svg>
        </c:section>
      </section>
    </body>
  </html>
</document>