<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "glossary.dtd" [
  <!ENTITY amp "&amp;">
  <!ENTITY lt "&lt;">
  <!ENTITY gt "&gt;">
  <!ENTITY apos '&apos;'>
  <!ENTITY quot "&quot;">
]>
<document version="2.0"
         xmlns="http://example.com/xmlns"
         xmlns:ext="http://example.com/xmlns/ext"
         ext:attr1="value1" 
         ext:attr2="value2"
         xml:lang="en" xml:space="preserve">
  <html xmlns:xlink="http://www.w3.org/1999/xlink"
        xlink:href="https://example.com"
        xlink:title="example">
    <head>
      <title>Complex Document</title>
      <meta name="description" content="A very complex document with &amp;lt; and &amp;gt;." />
      <style><![CDATA[
        @import url("style.css");
        /* style rules */
      ]]></style>
    </head>
    <body>
      <h1>My Complex Document</h1>
      <p>This is a paragraph containing a &note; entity reference.</p>
    </body>
  </html>
</document>