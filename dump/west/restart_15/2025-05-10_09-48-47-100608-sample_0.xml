<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document [
  <!ENTITY % p "This is a parameter entity!">
  <!ENTITY foo "foo BAR">
]>
<document xml:lang='en' xmlns:html='http://www.w3.org/1999/xhtml'>
  <html>
    <head>
      <title>xml entity testing</title>
    </head>
    <body>
      <svg xmlns='http://www.w3.org/2000/svg'>
        <circle cx='100' cy='50' r='40' />
      </svg>
      <metadata>
        <author>&foo;</author>
        <date>&date;</date>
      </metadata>
      <pi>This is a processing instruction: &p;</pi>
    </body>
  </html>
  <comment>This is a comment.</comment>
</document>