<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document SYSTEM "http://example.com/schemas/product.dtd"
  [
    <!ENTITY fruit "Apple">
    <!ENTITY % p "A short paragraph: %1; &fruit;">
  ]>
<document xmlns:ns1="http://example.org">
  <html xml:lang="fr">
    <head>
      <title>Example Product</title>
    </head>
    <body>
      <ns1:mypage>
        <section xml:space="preserve">
          <p>Product information: &p;.</p>
        </section>
      </ns1:mypage>
    </body>
  </html>
</document>