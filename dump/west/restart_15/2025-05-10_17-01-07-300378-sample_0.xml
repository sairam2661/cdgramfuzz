<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "events.dtd" [
  <!ENTITY name "John Smith">
  <!ENTITY addr SYSTEM "address.xml">
  <!ATTLIST document
    href CDATA #IMPLIED>
]>
<document href="http://example.com">
  <html xmlns:xlink="http://www.w3.org/1999/xlink">
    <head>
      <title>Events Calendar</title>
    </head>
    <body><h2>Meetings</h2>
      <ul>
        <li><event xlink:href="#event1">Event 1</event>
          <attendees>
            <listener xlink:type="locator" xlink:href="#listener1">
              <note>&name;</note>
            </listener>
          </attendees>
        </li>
      </ul>
      <section>
        <listitem>&addr;</listitem>
      </section>
    </body>
  </html>
</document>