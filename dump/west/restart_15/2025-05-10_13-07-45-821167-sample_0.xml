<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE document [
  <!ENTITY fruit "Apple">
  <!ELEMENT document (#PCDATA | html| metadata | section | note | address)*>
  <!ELEMENT html (#PCDATA | comment | PCDATA)*>
]>
<document>
  <html><head><title>XML Document</title></head><body>
  <p>This document includes an &fruit; and a comment: <!-- This is a comment --></p>
  <metadata><date>Today</date></metadata>
  <section><note>This is a note.</note></section>
  <address>123 Main St.</address>
  </body></html>
</document>